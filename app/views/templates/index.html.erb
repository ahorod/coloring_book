<h3>Templates</h3>

<div class="row">
  <div class="section">
  <% @templates.each do |template| %>
    <div class="col s4 m4">
      <div class="card">
        <div class="card-image">
          <img src="<%= template.image_url%>" alt="<%= template.tag %>" style="width:300px">
          <a class="btn-floating halfway-fab waves-effect waves-light pink"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
          <p><%= template.tag %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

<div style="display:none;">
  <div id="dialog" title="Color Template">
    <iframe id="dialog_iframe" width="600" height="400" style="border:0;"></iframe>
  </div>
</div>
